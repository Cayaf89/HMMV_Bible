<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    
    <entity name="App\Entity\Batiment">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY" />
        </id>

        <one-to-many  field="ville"              target-entity="Ville"     inversed-by="batiments"        />
        <many-to-one  field="creaturesProduites" target-entity="Creature"  mapped-by="batimentProducteur" />
        <one-to-one   field="batimentNecessaire" target-entity="Batiment"  inversed-by="batimentDebloque" />
        <one-to-one   field="batimentDebloque"   target-entity="Batiment"  mapped-by="batimentNecessaire" />
        <one-to-one   field="artefactNecessaire" target-entity="Artefact"  mapped-by="batimentDebloque" />
        <many-to-many field="coutRessources"     target-entity="Ressource" mapped-by="batimentsDebloque"  />
        
        <field name="nom"         type="string"     />
        <field name="description" type="text"       />
        <field name="niveauVille" type="smallint"   />

    </entity>
    
</doctrine-mapping>