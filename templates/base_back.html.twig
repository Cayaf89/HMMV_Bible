        <script type="application/javascript">
            $(document).ready(function() {
                var isOpening = false;
                $('#fab').on( 'click', function (evt) {
                    if( !$("#fab").hasClass('active') ) {
                        isOpening = true;
                        animateInFAB($("#fab"));
                    }
                });
                $(document).on( 'click', function (evt) {
                    if( $("#fab.active") && !isOpening ) {
                        isOpening = false;
                        animateOutFAB($("#fab"));
                    }
                    else if( isOpening ) {
                        isOpening = false;
                    }
                });
            });
        </script>

