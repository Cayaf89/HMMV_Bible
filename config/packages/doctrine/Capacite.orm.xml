<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    
    <entity name="App\Entity\Capacite">
        
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY" />
        </id>
        
        <one-to-many  field="competenceRequise"  target-entity="Competence" inversed-by="capacites"          />
        <many-to-many field="capacitesRequises"  target-entity="Capacite"   inversed-by="capacitesDebloques" />
        <many-to-many field="capacitesDebloques" target-entity="Capacite"   inversed-by="capacitesRequises"  />
        <many-to-many field="heros"              target-entity="Hero"       inversed-by="capacites"          />
        
        <field name="nom"         type="string" />
        <field name="description" type="text"   />
        
    </entity>
    
</doctrine-mapping>