<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    
    <entity name="App\Entity\Faction">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY" />
        </id>

        <one-to-one   field="competence"           target-entity="Competence"      mapped-by="faction"      />
        <one-to-many  field="terrain"              target-entity="Terrain"         inversed-by="factions"   />
        <many-to-one  field="villes"               target-entity="Ville"           mapped-by="faction"      />
        <many-to-one  field="heros"                target-entity="Hero"            mapped-by="faction"      />
        <many-to-one  field="creatures"            target-entity="Creature"        mapped-by="faction"      />
        <many-to-many field="magiesPreferees"      target-entity="Magie"           mapped-by="factionsPreference"     />
        <many-to-many field="specialisationsHero"  target-entity="Specialisation"  mapped-by="factionsHero" />
        <one-to-one   field="specialisationVille"  target-entity="Specialisation"  mapped-by="factionVille" />
 
        <field name="nomFaction"        type="string"   />
        <field name="typeHero"          type="string"   />
        <field name="description"       type="text"     />

    </entity>

</doctrine-mapping>