{% extends 'base.html.twig' %}

{% block title %}Artefact index{% endblock %}

{% block body %}
    <h1>Artefact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Emplacement</th>
                <th>Importance</th>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artefact in artefacts %}
            <tr>
                <td>{{ artefact.nom }}</td>
                <td>{{ artefact.description }}</td>
                <td>{{ artefact.emplacement }}</td>
                <td>{{ artefact.importance }}</td>
                <td>{{ artefact.id }}</td>
                <td>
                    <a href="{{ path('artefact_show', {'id': artefact.id}) }}">show</a>
                    <a href="{{ path('artefact_edit', {'id': artefact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('artefact_new') }}">Create new</a>
{% endblock %}