{% extends 'base_back.html.twig' %}

{% block title %}Semaine index{% endblock %}

{% block body %}
    <h1>Semaine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for semaine in semaines %}
            <tr>
                <td>{{ semaine.nom }}</td>
                <td>{{ semaine.description }}</td>
                <td>{{ semaine.id }}</td>
                <td>
                    <a href="{{ path('semaine_show', {'id': semaine.id}) }}">show</a>
                    <a href="{{ path('semaine_edit', {'id': semaine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('semaine_new') }}">Create new</a>
{% endblock %}