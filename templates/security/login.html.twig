<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="Heroes and Might and Magic V :{% block description %}{% endblock %}">
        <meta name="author" content="Cayaf & Karma">
        <title>{% block title %}La Bible HMMV{% endblock %}</title>
        <!--IE Compatibility modes-->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <link rel="stylesheet" href="{{ asset('lib/bootstrap/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/font-awesome/css/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/metismenu/metisMenu.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/onoffcanvas/onoffcanvas.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/animate.css/animate.css') }}">
    </head>
    <body class="login">
        <div class="form-signin">
            <div class="text-center">
                <img src="{{ asset('img/logo.png') }}" alt="Metis Logo">
            </div>
            <hr>
            <div class="tab-content">
                <div id="login" class="tab-pane active">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path('login') }}" method="post">
                        <p class="text-muted text-center">
                            Entrer votre nom d'utilisateur et mot de passe
                        </p>
                        <input class="form-control top" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Nom d'utilisateur"/>
                        <input class="form-control bottom" type="password" id="password" name="_password" placeholder="Mot de passe" />
                        <div class="checkbox">
                          <label>
                            <input id="remember_me" name="remember_me" type="checkbox"> Se souvenir de moi
                          </label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Connection</button>
                    </form>
                </div>
            </div>
        </div>
        
        <script src="{{ asset('lib/jquery/jquery.js') }}"></script>
        <script src="{{ asset('lib/bootstrap/js/bootstrap.js') }}"></script>
        {% block javascripts %}
            <script type="application/javascript">
                (function($) {
                    $(document).ready(function() {
                        $('.list-inline li > a').click(function() {
                            var activeForm = $(this).attr('href') + ' > form';
                            //console.log(activeForm);
                            $(activeForm).addClass('animated fadeIn');
                            //set timer to 1 seconds, after that, unload the animate animation
                            setTimeout(function() {
                                $(activeForm).removeClass('animated fadeIn');
                            }, 1000);
                        });
                    });
                })(jQuery);
            </script>
        {% endblock %}
    </body>
</html>