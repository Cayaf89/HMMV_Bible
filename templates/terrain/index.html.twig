{% extends 'base_back.html.twig' %}

{% block title %}Terrain index{% endblock %}

{% block body %}
    <h1>Terrain index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for terrain in terrains %}
            <tr>
                <td>{{ terrain.nom }}</td>
                <td>{{ terrain.id }}</td>
                <td>
                    <a href="{{ path('terrain_show', {'id': terrain.id}) }}">show</a>
                    <a href="{{ path('terrain_edit', {'id': terrain.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('terrain_new') }}">Create new</a>
{% endblock %}